@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Edição de Contato</h1>

</div>


<form>
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" placeholder="Digite o Nome do Contato">
  </div>

  <div class="form-group">
    <label for="nome">Sobrenome</label>
    <input type="text" class="form-control" placeholder="Digite o Sobrenome do Contato">
  </div>

  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" class="form-control" placeholder="Digite o E-mail do Contato">
  </div>

  <div class="form-group">
    <label for="celular">Celular</label>
    <input type="text" class="form-control" placeholder="Digite o Número de Celular do Contato">
  </div>

  <div class="form-group">
    <label for="email">Observação</label>
    <input type="text" class="form-control" placeholder="Digite uma Observação">
    <br/>
  </div>

  <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary button-block">Alterar</button>
    <a class="btn btn-secondary button-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
  </div>
</form>
